<!-- views/about.ejs -->

<%- include('layout', { title: 'About Us' }) %>

<style>
    /* Additional styles for the about page */
    section {
        margin-bottom: 20px;
    }

    #interactive-container {
        text-align: center;
        padding: 20px;
        background-color: #f8f8f8;
        border-radius: 8px;
    }

    #interactive-button {
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        background-color: #3498db;
        color: #fff;
        border: none;
        border-radius: 4px;
    }

    #interactive-message {
        margin-top: 10px;
        font-weight: bold;
    }
</style>

<section>
    <h2>About Us</h2>
    <p>We are a fantastic team working on amazing projects!</p>
</section>

<section>
    <h3>Interactive Feature</h3>
    <div id="interactive-container">
        <button id="interactive-button">Click Me</button>
        <p id="interactive-message"></p>
    </div>
</section>

<script>
    // Your JavaScript code can go here
    document.getElementById('interactive-button').addEventListener('click', function() {
        document.getElementById('interactive-message').innerText = 'Button clicked!';
    });
</script>
